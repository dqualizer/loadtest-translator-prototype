{
  "name": "SimpleScript",
  "baseURL": "http://127.0.0.1:8080/books",
  "options": {
    "vus": 2,
    "duration": "10s"
  },
  "requests": [
    {
      "type": "GET",
      "path": "/all",
      "checks": {
        "status": 200,
        "error_code": 0
      }
    },
    {
      "type": "POST",
      "path": "/new",
      "payload": {
        "name": "Smart Stories",
        "author": "Julia",
        "releaseDate": "2005-10-10"
      },
      "params": {
        "headers": {
          "content-type": "application/json"
        }
      }
    },
    {
      "type": "GET",
      "path": "/4",
      "checks": {
        "status": 200
      }
    }
  ]
}